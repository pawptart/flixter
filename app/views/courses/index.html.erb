<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @course.each do |course| %>
    <h2 class="text-center"><%= link_to course.title, course_path(course) %></h2>
    <% if course.image.url %>
      <%= image_tag course.image.url, class: 'img-fluid'%>
    <% end %>
    <br />
    <div class="row">
      <div class=" col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>